{
    "name": "Wordrive",
    "description": "Helping students and language enthusiasts learn the words that fascinate them.",
    "version": "0.0.0.1",
    "manifest_version": 3,
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "permissions": [
        "contextMenus",
        "downloads",
        "storage",
        "tabs"
    ],
    "host_permissions": [
        "*://*/"
    ],
    "action": {
        "default_popup": "home.html"
    }
}