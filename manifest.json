{
    "name": "Wordrive",
    "description": "Save words for later without interrupting your reading.",
    "version": "1.0",
    "manifest_version": 3,
    "background": {
        "service_worker": "background.js"
    },
    "permissions": [
        "activeTab",
        "contextMenus",
        "downloads",
        "scripting",
        "storage",
        "tabs"
    ],
    "action": {
        "default_popup": "popup.html"
    }
}