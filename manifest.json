{
    "name": "Wordrive",
    "description": "Save words for later without interrupting your reading.",
    "version": "1.0",
    "manifest_version": 3,
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "permissions": [
        "contextMenus",
        "downloads",
        "storage",
        "tabs"
    ],
    "host_permissions": [
        "*://*/"
    ],
    "action": {
        "default_popup": "home.html"
    }
}